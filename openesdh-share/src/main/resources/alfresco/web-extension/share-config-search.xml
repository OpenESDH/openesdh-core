<alfresco-config>
    <config evaluator="string-compare" condition="SearchModel">
        <default-controls>
            <type name="d:text" control="CaseFilterTextWidget"/>
            <type name="d:int" control="CaseFilterTextWidget"/>
            <type name="d:long" control="CaseFilterTextWidget"/>
            <type name="d:date" control="CaseFilterDateRangeWidget"/>
            <type name="d:datetime" control="CaseFilterDateRangeWidget"/>
            <type name="cm:authority" control="CaseFilterAuthorityWidget"/>
            <type name="LIST:*" control="CaseFilterSelectWidget"/>
        </default-controls>
        <searches>
            <search type="case:base">
                <column-visibility>
                    <show id="TYPE"/>
                    <show id="oe:id"/>
                    <show id="cm:title"/>
                    <show id="case:owners"/>
                    <show id="cm:modified"/>
                    <show id="cm:created"/>
                    <show id="oe:status"/>
                    <show id="case:startDate"/>
                    <show id="case:endDate"/>
                </column-visibility>
                <column-availability>
                    <show id="TYPE"/>
                    <show id="oe:id"/>
                    <show id="cm:title"/>
                    <show id="case:owners"/>
                    <show id="cm:modified"/>
                    <show id="cm:created"/>
                    <show id="oe:status"/>
                    <show id="case:startDate"/>
                    <show id="case:endDate"/>
                </column-availability>
                <filters-availability>
                    <show id="ALL"/>
                    <show id="TYPE"/>
                    <show id="oe:id"/>
                    <show id="cm:title"/>
                    <show id="case:owners"/>
                    <show id="cm:modified"/>
                    <show id="cm:created"/>
                    <show id="oe:status"/>
                    <show id="case:startDate"/>
                    <show id="case:endDate"/>
                </filters-availability>
                <actions>
                    <action id="case-dashboard"
                            href="folder-details?nodeRef={nodeRef}"
                            label="casegrid.goto_case"/>
                    <action id="case-edit"
                            href="edit-metadata?nodeRef={nodeRef}"
                            label="casegrid.edit_case"/>
                    <action id="case-documents"
                            href="folder-details?nodeRef={nodeRef}"
                            label="casegrid.case_documents"/>
                </actions>
            </search>
        </searches>
    </config>
</alfresco-config>