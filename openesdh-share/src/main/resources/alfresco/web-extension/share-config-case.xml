<alfresco-config>
    <config evaluator="model-type" condition="case:simple">
        <forms>
            <!-- Default create content form configuration for a simple case -->
            <form>
                <field-visibility>
                    <show id="cm:title" force="true"/>
                    <show id="cm:description" force="true"/>
                    <show id="oe:status" />
                    <show id="case:owners" />
                    <show id="case:startDate" />
                    <show id="case:endDate" />
                </field-visibility>
                <appearance>
                    <field id="cm:description">
                        <control>
                            <control-param name="activateLinks">true</control-param>
                        </control>
                    </field>
                </appearance>
            </form>
        </forms>
    </config>
    <config evaluator="node-type" condition="case:simple">
        <forms>
            <!-- Default edit properties form configuration for a simple case -->
            <form>
                <field-visibility>
                    <show id="cm:title" force="true"/>
                    <show id="cm:description" force="true"/>
                    <show id="oe:status" />
                    <show id="case:owners" />
                    <show id="case:startDate" />
                    <show id="case:endDate" />
                </field-visibility>
                <appearance>
                    <field id="cm:description">
                        <control>
                            <control-param name="activateLinks">true</control-param>
                        </control>
                    </field>
                </appearance>
            </form>
        </forms>
    </config>
</alfresco-config>