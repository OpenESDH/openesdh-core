<alfresco-config>
    <config evaluator="model-type" condition="case:simple">
        <forms>
            <!-- Default form configuration for the case type -->
            <form>
                <field-visibility>
                    <show id="oe:title"/>
                    <show id="oe:description"/>
                    <show id="oe:status"/>
                    <show id="case:owners"/>
                    <show id="case:startDate"/>
                    <show id="case:endDate"/>
                </field-visibility>
                <appearance>
                  <field id="oe:title">
                    <control template="/org/alfresco/components/form/controls/textfield.ftl"></control>
                  </field>
                  <field id="oe:description">
                    <control template="/org/alfresco/components/form/controls/textarea.ftl"></control>
                  </field>
                  <field id="oe:status">
                    <control template="/org/alfresco/components/form/controls/selectone.ftl"></control>
                  </field>
                  <field id="case:startDate">
                    <control template="/org/alfresco/components/form/controls/date.ftl"></control>
                  </field>
                  <field id="case:endDate">
                    <control template="/org/alfresco/components/form/controls/date.ftl"></control>
                  </field>
                </appearance>
            </form>
        </forms>
    </config>
</alfresco-config>