    <config evaluator="model-type" condition="party:person">
        <forms>
            <!-- Default create content form configuration for a person party -->
            <form>
                <field-visibility>
                    <hide id="cm:name"/>

                    <!-- TODO: Group name fields -->
                    <show id="party:firstName" />
                    <show id="party:middleName" />
                    <show id="party:lastName" />

                    <show id="party:email" />

                    <show id="party:cprNumber" />
                    <show id="party:partyType" />
                    <show id="party:personInformationProtection" />

                    <!-- TODO: Better appearance of address fields -->
