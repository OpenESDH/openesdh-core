<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>dk.openesdh</groupId>
    <artifactId>openesdh-repo</artifactId>
    <version>1.0-SNAPSHOT</version>
    <name>openesdh-repo Repository AMP project</name>
    <packaging>amp</packaging>
    <description>Manages the lifecycle of the openesdh-repo Repository AMP (Alfresco Module Package)</description>

    <parent>
        <groupId>dk.openesdh</groupId>
        <artifactId>parent</artifactId>
        <version>1.0-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>

    </parent>

    <properties>
        <alfresco.data.location>alf_data_dev</alfresco.data.location>
        <alfresco.client.war>alfresco</alfresco.client.war>
        <alfresco.client.contextPath>/alfresco</alfresco.client.contextPath>
    </properties>

    <!-- Following dependencies are needed for compiling Java code in src/main/java; 
         <scope>provided</scope> is inherited for each of the following; 
         for more info, please refer to alfresco-platform-distribution POM -->
    <dependencies>
        <dependency>
        <groupId>${alfresco.groupId}</groupId>
        <artifactId>alfresco-remote-api</artifactId>
        <version>${alfresco.version}</version>
    </dependency>

        <dependency>
            <groupId>${alfresco.groupId}</groupId>
            <artifactId>alfresco-repository</artifactId>
        </dependency>

        <dependency>
            <groupId>dk.openesdh.aoi</groupId>
            <artifactId>aoi-repo</artifactId>
            <version>1.0-SNAPSHOT</version>
            <type>amp</type>
        </dependency>

        <dependency>
            <groupId>dk.openesdh</groupId>
            <artifactId>simple_case_repo</artifactId>
            <version>1.0-SNAPSHOT</version>
            <type>amp</type>
        </dependency>

        <!-- Test dependencies -->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>share-extras</groupId>
            <artifactId>javascript-console</artifactId>
            <version>0.5.1</version>
            <classifier>community</classifier>
            <type>amp</type>
        </dependency>

		<dependency>
			<groupId>magenta-aps</groupId>
			<artifactId>alfresco_da_dk</artifactId>
			<version>5.0.0-SNAPSHOT</version>
			<type>amp</type>
		</dependency>

    </dependencies>

</project>
