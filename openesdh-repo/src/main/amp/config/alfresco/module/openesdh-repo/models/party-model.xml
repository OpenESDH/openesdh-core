<?xml version="1.0" encoding="UTF-8"?>
<model name="party:partyModel"
       xmlns="http://www.alfresco.org/model/dictionary/1.0">
    <description>OpenESDH Party Model</description>
    <author>Seth Yastrov, Flemming Heide Pedersen, Ole Hejlskov,
        Torben Lauritzen
    </author>
    <version>1.0</version>
    <imports>
        <import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
        <import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
        <import uri="http://www.alfresco.org/model/system/1.0" prefix="sys"/>
        <import uri="http://www.alfresco.org/model/datalist/1.0" prefix="dl"/>
    </imports>
    <namespaces>
        <namespace uri="http://openesdh.dk/model/party/1.0/" prefix="party"/>
    </namespaces>
    <constraints>
        <constraint name="party:cprConstraint" type="REGEX">
            <parameter name="expression">
                <value>^\d{10}$</value>
            </parameter>
        </constraint>
        <constraint name="party:cvrConstraint" type="REGEX">
            <parameter name="expression">
                <value>^\d{8}$</value>
            </parameter>
        </constraint>
        <constraint name="party:emailConstraint" type="REGEX">
            <parameter name="expression">
                <!-- From http://www.w3.org/TR/2012/CR-html5-20121217/forms.html#valid-e-mail-address -->
                <value><![CDATA[^[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)*$]]></value>
            </parameter>
        </constraint>
        <constraint name="party:partyTypeConstraint" type="LIST">
            <parameter name="allowedValues">
                <list>
                    <value>SENDER</value>
                    <value>RECEIVER</value>
                </list>
            </parameter>
        </constraint>
        <constraint name="party:contactTypeConstraint" type="LIST">
            <parameter name="allowedValues">
                <list>
                    <value>PERSON</value>
                    <value>ORGANIZATION</value>
                </list>
            </parameter>
        </constraint>

        <!-- FASD-defined data-types -->
        <!-- TODO: move these into separate model -->
        <constraint name="party:codeConstraint" type="LENGTH">
            <parameter name="maxLength">
                <value>2</value>
            </parameter>
        </constraint>
        <constraint name="party:int4" type="MINMAX">
            <parameter name="maxValue">
                <value>9999</value>
            </parameter>
        </constraint>
        <constraint name="party:char4" type="LENGTH">
            <parameter name="maxLength">
                <value>4</value>
            </parameter>
        </constraint>
        <constraint name="party:char20" type="LENGTH">
            <parameter name="maxLength">
                <value>20</value>
            </parameter>
        </constraint>
        <constraint name="party:char34" type="LENGTH">
            <parameter name="maxLength">
                <value>34</value>
            </parameter>
        </constraint>
        <constraint name="party:char40" type="LENGTH">
            <parameter name="maxLength">
                <value>40</value>
            </parameter>
        </constraint>
        <constraint name="party:char50" type="LENGTH">
            <parameter name="maxLength">
                <value>50</value>
            </parameter>
        </constraint>
        <constraint name="party:char70" type="LENGTH">
            <parameter name="maxLength">
                <value>70</value>
            </parameter>
        </constraint>
    </constraints>
    <types>
        <type name="party:base">
            <title>Party</title>
            <parent>dl:dataListItem</parent>
            <properties>
                <!-- FASD: ePostAddresse -->
                <property name="party:email">
                    <type>d:text</type>
                    <mandatory>true</mandatory>
                    <constraints>
                        <constraint ref="party:emailConstraint"/>
                    </constraints>
                </property>
                <!-- FASD: partType -->
                <property name="party:partyType">
                    <type>d:text</type>
                    <mandatory>true</mandatory>
                    <constraints>
                        <constraint ref="party:partyTypeConstraint"/>
                    </constraints>
                </property>
                <!-- FASD: kontaktType -->
                <property name="party:contactType">
                    <type>d:text</type>
                    <protected>true</protected>
                    <mandatory>true</mandatory>
                    <constraints>
                        <constraint ref="party:contactTypeConstraint"/>
                    </constraints>
                </property>
            </properties>
            <mandatory-aspects>
                <aspect>party:address</aspect>
            </mandatory-aspects>
        </type>
        <type name="party:person">
            <title>Person</title>
            <parent>party:base</parent>
            <properties>
                <!-- FASD: forNavn -->
                <property name="party:firstName">
                    <type>d:text</type>
                    <mandatory>true</mandatory>
                    <constraints>
                        <constraint ref="party:char50"/>
                    </constraints>
                </property>
                <!-- FASD: efterNavn -->
                <property name="party:lastName">
                    <type>d:text</type>
                    <mandatory>true</mandatory>
                    <constraints>
                        <constraint ref="party:char40"/>
                    </constraints>
                </property>
                <!-- FASD: mellemNavn -->
                <property name="party:middleName">
                    <type>d:text</type>
                    <constraints>
                        <constraint ref="party:char50"/>
                    </constraints>
                </property>

                <!-- FASD: cprNr -->
                <property name="party:cprNumber">
                    <type>d:text</type>
                    <constraints>
                        <constraint ref="party:cprConstraint"/>
                    </constraints>
                </property>

                <!-- FASD: reklameBeskyttelse -->
                <property name="party:personInformationProtection">
                    <type>d:boolean</type>
                </property>
            </properties>
            <overrides>
                <property name="party:contactType">
                    <default>PERSON</default>
                </property>
            </overrides>
        </type>
        <type name="party:organization">
            <title>Organization</title>
            <parent>party:base</parent>
            <properties>
                <!-- FASD: organisationsNavn -->
                <property name="party:organizationName">
                    <type>d:text</type>
                    <mandatory>true</mandatory>
                    <constraints>
                        <constraint ref="party:char50"/>
                    </constraints>
                </property>
                <!-- FASD: cvrNr -->
                <property name="party:cvrNumber">
                    <type>d:text</type>
                    <constraints>
                        <constraint ref="party:cvrConstraint"/>
                    </constraints>
                </property>
            </properties>
            <associations>
                <child-association name="party:members">
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>party:base</class>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </target>
                    <duplicate>false</duplicate>
                </child-association>
            </associations>
            <overrides>
                <property name="party:contactType">
                    <default>ORGANIZATION</default>
                </property>
            </overrides>
        </type>
    </types>
    <aspects>
        <aspect name="party:address">
            <title>Address</title>
            <properties>
                <!-- FASD: adresse -->
                <!-- The whole address in one field -->
                <property name="party:address">
                    <type>d:text</type>
                    <!-- TODO: Make this a system-maintained property: -->
                    <!--<protected>true</protected>-->
                    <mandatory>true</mandatory>
                    <constraints>
                        <constraint ref="party:char70"/>
                    </constraints>
                </property>
                
                <!-- FASD: adresseLinie1 -->
                <!-- First line in address description for a foreign address -->
                <property name="party:addressLine1">
                    <type>d:text</type>
                    <constraints>
                        <constraint ref="party:char34"/>
                    </constraints>
                </property>
                <!-- FASD: adresseLinie2 -->
                <property name="party:addressLine2">
                    <type>d:text</type>
                    <constraints>
                        <constraint ref="party:char34"/>
                    </constraints>
                </property>
                <!-- FASD: adresseLinie3 -->
                <property name="party:addressLine3">
                    <type>d:text</type>
                    <constraints>
                        <constraint ref="party:char34"/>
                    </constraints>
                </property>
                <!-- FASD: adresseLinie4 -->
                <property name="party:addressLine4">
                    <type>d:text</type>
                    <constraints>
                        <constraint ref="party:char34"/>
                    </constraints>
                </property>
                <!-- FASD: adresseLinie5 -->
                <property name="party:addressLine5">
                    <type>d:text</type>
                    <constraints>
                        <constraint ref="party:char34"/>
                    </constraints>
                </property>
                <!-- FASD: adresseLinie6 -->
                <property name="party:addressLine6">
                    <type>d:text</type>
                    <constraints>
                        <constraint ref="party:char34"/>
                    </constraints>
                </property>

                <!-- FASD: byNavn -->
                <property name="party:cityName">
                    <type>d:text</type>
                    <mandatory>true</mandatory>
                    <constraints>
                        <constraint ref="party:char34"/>
                    </constraints>
                </property>

                <!-- FASD: postNr -->
                <property name="party:postCode">
                    <type>d:int</type>
                    <mandatory>true</mandatory>
                    <constraints>
                        <constraint ref="party:int4"/>
                    </constraints>
                </property>

                <!-- FASD: landKode -->
                <property name="party:countryCode">
                    <type>d:text</type>
                    <mandatory>true</mandatory>
                    <default>DK</default>
                    <constraints>
                        <constraint ref="party:codeConstraint"/>
                    </constraints>
                </property>


                <!-- FASD: etage -->
                <property name="party:floorIdentifier">
                    <type>d:text</type>
                    <constraints>
                        <constraint type="LENGTH">
                            <parameter name="maxLength">
                                <value>2</value>
                            </parameter>
                        </constraint>
                    </constraints>
                </property>

                <!-- FASD: vejNavn -->
                <property name="party:streetName">
                    <type>d:text</type>
                    <constraints>
                        <constraint ref="party:char40"/>
                    </constraints>
                </property>

                <!-- FASD: vejKode -->
                <property name="party:streetCode">
                    <type>d:text</type>
                    <constraints>
                        <constraint ref="party:char4"/>
                    </constraints>
                </property>

                <!-- FASD: doerBetegnelse -->
                <property name="party:suiteIdentifier">
                    <type>d:text</type>
                    <constraints>
                        <constraint ref="party:char4"/>
                    </constraints>
                </property>

                <!-- FASD: postBoks -->
                <property name="party:postBox">
                    <type>d:text</type>
                    <constraints>
                        <constraint ref="party:char4"/>
                    </constraints>
                </property>

                <!-- FASD: postDistrikt -->
                <property name="party:postDistrict">
                    <type>d:text</type>
                    <constraints>
                        <constraint ref="party:char20"/>
                    </constraints>
                </property>

                <!-- FASD: husNr -->
                <property name="party:houseNumber">
                    <type>d:text</type>
                    <constraints>
                        <constraint ref="party:char4"/>
                    </constraints>
                </property>

                <!-- FASD: kommuneNr -->
                <property name="party:municipalityCode">
                    <type>d:int</type>
                    <constraints>
                        <constraint ref="party:int4"/>
                    </constraints>
                </property>

                <!-- FASD: lokalitetsNavn -->
                <property name="party:mailDeliverySublocationIdentifier">
                    <type>d:text</type>
                    <constraints>
                        <constraint ref="party:char34"/>
                    </constraints>
                </property>
            </properties>
        </aspect>
    </aspects>
</model>
