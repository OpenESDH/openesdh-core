<?xml version="1.0" encoding="UTF-8"?>
<model name="party:partyModel"
       xmlns="http://www.alfresco.org/model/dictionary/1.0">
    <description>OpenESDH Party Model</description>
    <author>Seth Yastrov, Flemming Heide Pedersen, Ole Hejlskov,
        Torben Lauritzen
    </author>
    <version>1.0</version>
    <imports>
        <import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
        <import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
        <import uri="http://www.alfresco.org/model/system/1.0" prefix="sys"/>
        <import uri="http://www.alfresco.org/model/datalist/1.0" prefix="dl"/>
    </imports>
    <namespaces>
        <namespace uri="http://openesdh.dk/model/party/1.0/" prefix="party"/>
    </namespaces>
    <types>
        <type name="party:base">
            <title>Party</title>
            <parent>dl:dataListItem</parent>
            <properties>
                <property name="party:email">
                    <type>d:text</type>
                    <mandatory>true</mandatory>
                </property>
            </properties>
            <mandatory-aspects>
                <aspect>party:address</aspect>
            </mandatory-aspects>
        </type>
        <type name="party:person">
            <title>Person</title>
            <parent>party:base</parent>
            <properties>
                <property name="party:firstName">
                    <type>d:text</type>
                    <mandatory>true</mandatory>
                </property>
                <property name="party:lastName">
                    <type>d:text</type>
                    <mandatory>true</mandatory>
                </property>
                <property name="party:middleName">
                    <type>d:text</type>
                </property>
                <property name="party:cprNumber">
                    <type>d:int</type>
                </property>
            </properties>
        </type>
        <type name="party:organization">
            <title>Organization</title>
            <parent>party:base</parent>
            <properties>
                <property name="party:organizationName">
                    <type>d:text</type>
                    <mandatory>true</mandatory>
                </property>
                <property name="party:cvrNumber">
                    <type>d:int</type>
                </property>
            </properties>
            <associations>
                <child-association name="party:member">
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>party:base</class>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </target>
                    <duplicate>false</duplicate>
                </child-association>
            </associations>
        </type>
    </types>
    <aspects>
        <aspect name="party:address">
            <title>Address</title>
            <properties>
                <property name="party:address1">
                    <type>d:text</type>
                    <mandatory>true</mandatory>
                </property>
                <property name="party:address2">
                    <type>d:text</type>
                </property>
                <property name="party:floor">
                    <type>d:text</type>
                </property>
                <property name="party:suiteIdentifier">
                    <type>d:text</type>
                </property>
                <property name="party:postCode">
                    <type>d:int</type>
                    <mandatory>true</mandatory>
                </property>
                <property name="party:countryCode">
                    <type>d:text</type>
                    <mandatory>true</mandatory>
                </property>
            </properties>
        </aspect>
    </aspects>
</model>
