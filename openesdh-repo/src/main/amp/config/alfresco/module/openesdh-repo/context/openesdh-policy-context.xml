<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE beans PUBLIC '-//SPRING//DTD BEAN//EN' 'http://www.springframework.org/dtd/spring-beans.dtd'>
<beans>
    <bean id="caseBehaviour" class="dk.openesdh.repo.policy.CaseBehaviour" init-method="init">
        <property name="caseService">
            <ref bean="CaseService"/>
        </property>
        <property name="policyComponent">
            <ref bean="policyComponent"/>
        </property>
    </bean>

    <bean id="caseOwnersBehaviour" class="dk.openesdh.repo.policy.CaseOwnersBehaviour" init-method="init">
        <property name="caseService">
            <ref bean="CaseService"/>
        </property>
        <property name="policyComponent">
            <ref bean="policyComponent"/>
        </property>
        <property name="nodeService">
            <ref bean="NodeService"/>
        </property>
    </bean>

    <bean id="contact.group.policies" class="dk.openesdh.repo.policy.ContactsGroupPolicy"
          init-method="init">
        <property name="contactsGroup">
            <value>GROUP_CONTACTS</value>
        </property>
        <property name="authorityService">
            <ref bean="AuthorityService" />
        </property>
        <property name="contactService">
            <ref bean="ContactService" />
        </property>
        <property name="policyComponent">
            <ref bean="policyComponent" />
        </property>
        <property name="nodeService">
            <ref bean="NodeService" />
        </property>
    </bean>

    <bean id="documentBehaviour" class="dk.openesdh.repo.policy.DocumentBehaviour" init-method="init">
        <property name="documentService">
            <ref bean="DocumentService"/>
        </property>
        <property name="documentTypeService">
            <ref bean="DocumentTypeService"/>
        </property>
        <property name="documentCategoryService">
            <ref bean="DocumentCategoryService"/>
        </property>
        <property name="nodeService" ref="NodeService"/>
        <property name="policyComponent" ref="policyComponent"/>
    </bean>

    <!-- Keep user emails unique in the system-->
    <bean id="userEmailCheckBehaviour" class="dk.openesdh.repo.policy.CreateUserBehaviour" init-method="init">
        <property name="nodeService" ref="nodeService"/>
        <property name="personService" ref="personService"/>
        <property name="policyComponent" ref="policyComponent"/>
    </bean>

    <!--  <bean id="documentsBehaviour" class="dk.openesdh.repo.policy.DocumentsBehaviour" init-method="init">
          <property name="nodeService">
              <ref bean="NodeService"/>
          </property>
          <property name="policyComponent">
              <ref bean="policyComponent"/>
          </property>
      </bean>-->
</beans>
