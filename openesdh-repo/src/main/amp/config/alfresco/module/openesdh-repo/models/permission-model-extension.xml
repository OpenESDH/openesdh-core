<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE permissions PUBLIC '-//ALFRESCO//DTD PERMISSIONS//EN' 'permissionSchema.dtd'>

<permissions>

    <!-- Namespaces used in type references -->
    <namespaces>
        <namespace uri="http://www.alfresco.org/model/system/1.0" prefix="sys"/>
        <namespace uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
        <namespace uri="http://openesdh.dk/model/case/1.0/" prefix="case" />
    </namespaces>
    <!-- ============================================ -->
    <!-- Permissions specific to the ESDH Case module -->
    <!-- ============================================ -->

    <!-- README!!: Permission group names MUST be unique, otherwise the name will get
         prefixed with the qname of the type.
    -->

    <!-- permissionGroup names are camelcase, including URI prefix, and width a capital first letter, e.g.:
        A reader for the case:simple type, should be named CaseSimpleReader -->

    <!--
    1.Coordinator: read, edit, add, delete (full access)
    2.Collaborator: read, edit, add
    3.Contributor: read, add
    4.Editor: read, edit
    5.Consumer: read
    -->


    <permissionSet type="case:simple" expose="selected">
        <permissionGroup name="CaseSimpleReader" expose="true">
            <includePermissionGroup permissionGroup="Consumer" type="cm:cmobject" />
        </permissionGroup>
        <permissionGroup name="CaseSimpleWriter"  expose="true">
            <includePermissionGroup permissionGroup="Coordinator" type="cm:cmobject" />
        </permissionGroup>
        <!--
        <permission name="_SimpleReader" expose="false" >
            <grantedToGroup permissionGroup="SimpleReader" />
            <requiredPermission on="parent" name="_ReadChildren" implies="false"/>
        </permission>

        <permission name="_SimpleWriter" expose="false" >
            <grantedToGroup permissionGroup="SimpleWriter" />
            <requiredPermission on="parent" name="_ReadChildren" implies="false"/>
            <requiredPermission on="parent" name="_WriteChildren" implies="false"/>
        </permission>
-->
    </permissionSet>


    <permissionSet type="case:base" expose="selected">
        <permissionGroup name="CaseOwners" expose="false">
            <includePermissionGroup permissionGroup="Coordinator" type="cm:cmobject" />
        </permissionGroup>
    </permissionSet>
</permissions>


