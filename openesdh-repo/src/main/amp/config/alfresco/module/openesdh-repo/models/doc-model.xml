<?xml version="1.0" encoding="UTF-8"?>
<model name="doc:documentModel" xmlns="http://www.alfresco.org/model/dictionary/1.0">
    <description>openESDH Document Model</description>
    <author>Seth Yastrov, Flemming Heide Pedersen, Ole Hejlskov, Torben Lauritzen</author>
    <version>1.0</version>
    <imports>
        <import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d" />
        <import uri="http://www.alfresco.org/model/content/1.0" prefix="cm" />
        <import uri="http://www.alfresco.org/model/system/1.0" prefix="sys" />
        <import uri="http://openesdh.dk/model/openesdh/1.0/" prefix="oe" />
        <import uri="http://openesdh.dk/model/case/1.0/" prefix="case" />
    </imports>
    <namespaces>
        <namespace uri="http://openesdh.dk/model/document/1.0/" prefix="doc" />
    </namespaces>
    <constraints>
        <constraint name="doc:statusConstraint" type="LIST">
            <parameter name="allowedValues">
                <list>
                    <value>under-treatment</value>
                    <value>applicable</value>
                    <value>approved</value>
                    <value>not-approved</value>
                    <value>scanned</value>
                    <value>sent-for-approval</value>
                    <value>awaiting-comments</value>
                    <value>discontinued</value>
                    <value>completed</value>
                    <value>journalized</value>
                </list>
            </parameter>
        </constraint>

        <constraint name="doc:categoryConstraint" type="LIST">
            <parameter name="allowedValues">
                <list>
                    <value>annex</value>
                    <value>proof</value>
                    <value>contract</value>
                    <value>note</value>
                    <value>report</value>
                    <value>proxy</value>
                    <value>warranty</value>
                    <value>part</value>
                    <value>statement</value>
                    <value>summary</value>
                    <value>accounting</value>
                    <value>offers</value>
                    <value>other</value>
                </list>
            </parameter>
        </constraint>

        <constraint name="doc:typeConstraint" type="LIST">
            <parameter name="allowedValues">
                <list>
                    <value>invoice</value>
                    <value>letter</value>
                    <value>note</value>
                    <value>report</value>
                    <value>agenda</value>
                    <value>other</value>
                </list>
            </parameter>
        </constraint>

        <constraint name="doc:stateConstraint" type="LIST">
            <parameter name="allowedValues">
                <list>
                    <value>received</value>
                    <value>distributed</value>
                    <value>draft</value>
                    <value>under-review</value>
                    <value>published</value>
                    <value>finalised</value>
                    <value>submitted</value>
                </list>
            </parameter>
        </constraint>

        <constraint name="doc:relationConstraint" type="LIST">
            <parameter name="allowedValues">
                <list>
                    <value>pending</value>
                    <value>referenced-by</value>
                    <value>relevant-to</value>
                </list>
            </parameter>
        </constraint>

        <constraint name="doc:variantConstraint" type="LIST">
            <parameter name="allowedValues">
                <list>
                    <value>production</value>
                    <value>publication</value>
                    <value>archiving</value>
                    <value>signed</value>
                </list>
            </parameter>
        </constraint>

        <!-- FASD: JournalPostPartType -->
        <constraint name="doc:contactRoleConstraint" type="LIST">
            <parameter name="allowedValues">
                <list>
                    <value>sender</value>
                    <value>receiver</value>
                </list>
            </parameter>
        </constraint>
    </constraints>
    <types>
        <type name="doc:base">
            <parent>oe:base</parent>
            <archive>true</archive>
            <properties>
                <property name="doc:uid">
                    <description>Id suppiled by the user</description>
                    <type>d:text</type>
                </property>
                <property name="doc:type">
                    <type>d:text</type>
                    <mandatory>true</mandatory>
                    <constraints>
                        <constraint ref="doc:typeConstraint"/>
                    </constraints>
                </property>

                <property name="doc:letterDate">
                    <description>Brevdato</description>
                    <type>d:date</type>
                </property>
                
                <property name="doc:discardmentCode">
                    <description>Kassationskode</description>
                    <type>d:text</type>
                </property>

                <property name="doc:state">
                    <type>d:text</type>
                    <mandatory>true</mandatory>
                    <constraints>
                        <constraint ref="doc:stateConstraint"/>
                    </constraints>
                </property>

                <property name="doc:comment">
                    <type>d:text</type>
                    <multiple>true</multiple>
                </property>

                <property name="doc:archive">
                    <description>Angiver arkiv som dokumentet indgår i</description>
                    <type>d:text</type>
                </property>

                <property name="doc:classification">
                    <description>Primær klassifikation</description>
                    <type>d:text</type>
                </property>

                <property name="doc:category">
                    <description>Kunden vælger selv disse</description>
                    <type>d:text</type>
                    <mandatory>true</mandatory>
                    <constraints>
                        <constraint ref="doc:categoryConstraint"/>
                    </constraints>
                </property>
            </properties>

            <associations>
                <association name="doc:owner">
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>cm:person</class>
                        <mandatory>true</mandatory>
                        <many>false</many>
                    </target>
                </association>

                <association name="doc:responsible">
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>cm:person</class>
                        <mandatory>true</mandatory>
                        <many>false</many>
                    </target>
                </association>

                <association name="doc:concernedParties">
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>cm:person</class>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </target>
                </association>

                <child-association name="doc:caseReferences">
                    <target>
                        <class>doc:reference</class>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </target>
                </child-association>

                <child-association name="doc:documentReferences">
                    <target>
                        <class>doc:reference</class>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </target>
                </child-association>

                <child-association name="doc:main">
                    <target>
                        <class>cm:content</class>
                        <mandatory>true</mandatory>
                        <many>false</many>
                    </target>
                </child-association>
            </associations>

            <overrides>
                <property name="oe:status">
                    <constraints>
                        <constraint ref="doc:statusConstraint"/>
                    </constraints>
                </property>
            </overrides>

            <mandatory-aspects>
                <aspect>doc:publicityExempted</aspect>
                <aspect>cm:versionable</aspect>
            </mandatory-aspects>
        </type>

        <type name="doc:reference">
            <properties>
                <property name="doc:nodeReference">
                    <type>d:noderef</type>
                </property>
                <property name="doc:relation">
                    <type>d:text</type>
                    <constraints>
                        <constraint ref="doc:relationConstraint" />
                    </constraints>
                </property>
                <property name="doc:relationDescription">
                    <type>d:text</type>
                </property>
            </properties>
        </type>

        <type name="doc:simple">
            <parent>doc:base</parent>
        </type>

        <type name="doc:file">
            <parent>cm:content</parent>
            <properties>
                <property name="doc:variant">
                    <type>d:text</type>
                    <constraints>
                        <constraint ref="doc:variantConstraint"/>
                    </constraints>
                </property>
            </properties>
            <mandatory-aspects>
                <aspect>cm:versionable</aspect>
            </mandatory-aspects>
        </type>

        <type name="doc:digitalFile">
            <parent>doc:file</parent>
        </type>

        <type name="doc:physicalFile">
            <parent>doc:file</parent>
            <properties>
                <property name="doc:filePosition">
                    <description>A description of the physical position of a physical file</description>
                    <type>d:text</type>
                    <mandatory>true</mandatory>
                    <multiple>false</multiple>
                </property>
            </properties>
        </type>
    </types>

    <aspects>
        <aspect name="doc:publicityExempted">
            <properties>
                <property name="doc:alternativeTitle">
                    <type>d:text</type>
                </property>
                <property name="doc:legalBasis">
                    <description>Reference to the legal document where the allowance of the exemption is found. Lovhjemmel</description>
                    <type>d:text</type>
                </property>
            </properties>
        </aspect>

        <aspect name="doc:documentContainer">
            <description>If aspect is applied, the folder may contain documents</description>
        </aspect>

        <aspect name="doc:partied">
            <parent>oe:partied</parent>
            <properties>
                <!-- FASD: JournalPostPart#partType -->
                <property name="doc:contactType">
                    <type>d:text</type>
                    <mandatory>true</mandatory>
                    <constraints>
                        <constraint ref="doc:contactRoleConstraint"/>
                    </constraints>
                </property>
            </properties>
        </aspect>

        <!--Just in case in the future-->
        <aspect name="doc:record">
            <properties>
                <property name="doc:attachmentCount">
                    <type>d:int</type>
                    <mandatory>true</mandatory>
                    <default>0</default>
                </property>
            </properties>
        </aspect>

    </aspects>

</model>
