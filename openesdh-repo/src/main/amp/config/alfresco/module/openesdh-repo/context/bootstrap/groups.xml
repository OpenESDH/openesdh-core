<?xml version="1.0" encoding="UTF-8"?>
<view:view xmlns:view="http://www.alfresco.org/view/repository/1.0" xmlns:cm="http://www.alfresco.org/model/content/1.0" 
	xmlns:sys="http://www.alfresco.org/model/system/1.0" >
	
	<view:reference view:pathref="${system.authorities_container.childname}">
        <view:associations>
          <sys:children>
            <cm:authorityContainer view:childName="cm:GROUP_CaseStandardCreator">
              <view:aspects>
                <sys:referenceable />
              </view:aspects>
              <view:properties>
                <sys:node-uuid>GROUP_CaseStandardCreator</sys:node-uuid>
                <cm:name>GROUP_CaseStandardCreator</cm:name>
                <cm:authorityName>GROUP_CaseStandardCreator</cm:authorityName>
              </view:properties>
            </cm:authorityContainer>
            <cm:authorityContainer view:childName="cm:GROUP_CaseStandardWriter">
              <view:aspects>
                <sys:referenceable />
              </view:aspects>
              <view:properties>
                <sys:node-uuid>GROUP_CaseStandardWriter</sys:node-uuid>
                <cm:name>GROUP_CaseStandardWriter</cm:name>
                <cm:authorityName>GROUP_CaseStandardWriter</cm:authorityName>
              </view:properties>
            </cm:authorityContainer>
            <cm:authorityContainer view:childName="cm:GROUP_CaseStandardReader">
              <view:aspects>
                <sys:referenceable />
              </view:aspects>
              <view:properties>
                <sys:node-uuid>GROUP_CaseStandardReader</sys:node-uuid>
                <cm:name>GROUP_CaseStandardReader</cm:name>
                <cm:authorityName>GROUP_CaseStandardReader</cm:authorityName>
              </view:properties>
            </cm:authorityContainer>
          </sys:children>
        </view:associations>        
      </view:reference>

      <view:reference view:pathref="${system.zones_container.childname}/cm:AUTH.ALF">
        <view:associations>
          <cm:inZone>
            <view:reference
              view:pathref="${system.authorities_container.childname}/cm:GROUP_CaseStandardCreator"
              view:childName="cm:GROUP_CaseStandardCreator" />
            <view:reference
              view:pathref="${system.authorities_container.childname}/cm:GROUP_CaseStandardWriter"
              view:childName="cm:GROUP_CaseStandardWriter" />
            <view:reference
              view:pathref="${system.authorities_container.childname}/cm:GROUP_CaseStandardReader"
              view:childName="cm:GROUP_CaseStandardReader" />
          </cm:inZone>
        </view:associations>
      </view:reference>
      
      <view:reference view:pathref="${system.zones_container.childname}/cm:APP.DEFAULT">
        <view:associations>
          <cm:inZone>
            <view:reference
              view:pathref="${system.authorities_container.childname}/cm:GROUP_CaseStandardCreator"
              view:childName="cm:GROUP_CaseStandardCreator" />
            <view:reference
              view:pathref="${system.authorities_container.childname}/cm:GROUP_CaseStandardWriter"
              view:childName="cm:GROUP_CaseStandardWriter" />
            <view:reference
              view:pathref="${system.authorities_container.childname}/cm:GROUP_CaseStandardReader"
              view:childName="cm:GROUP_CaseStandardReader" />
          </cm:inZone>
        </view:associations>
      </view:reference>

    <!-- Add admin user into CaseStandardCreator --> 
	<view:reference view:pathref="${system.authorities_container.childname}/cm:GROUP_CaseStandardCreator">
	    <view:associations>
	        <cm:member>
	            <view:reference view:pathref="/sys:system/sys:people/cm:admin" view:childName="cm:admin"></view:reference>           
	        </cm:member>
	    </view:associations>
	</view:reference>
	
</view:view>
