<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE beans PUBLIC '-//SPRING//DTD BEAN//EN' 'http://www.springframework.org/dtd/spring-beans.dtd'>
<beans>
    <bean id="OpenESDHFoldersService" class="dk.openesdh.repo.services.system.OpenESDHFoldersServiceImpl">
        <property name="nodeService" ref="nodeService" />
        <property name="repositoryHelper" ref="repositoryHelper" />
    </bean>
    
    <bean id="CaseService"
          class="dk.openesdh.repo.services.cases.CaseServiceImpl" init-method="init">
        <property name="nodeService">
            <ref bean="NodeService"/>
        </property>

        <property name="searchService">
            <ref bean="SearchService"/>
        </property>

        <property name="authorityService">
            <ref bean="AuthorityService"/>
        </property>

        <property name="ownableService">
            <ref bean="OwnableService"/>
        </property>

        <property name="permissionService">
            <ref bean="PermissionService"/>
        </property>

        <property name="transactionService">
            <ref bean="TransactionService"/>
        </property>

        <property name="dictionaryService">
            <ref bean="DictionaryService"/>
        </property>

        <property name="permissionsModelDAO">
            <ref bean="permissionsModelDAO"/>
        </property>

        <property name="documentService">
            <ref bean="DocumentService"/>
        </property>

        <property name="oeLockService">
            <ref bean="OELockService"/>
        </property>
        
        <property name="openESDHFoldersService">
            <ref bean="OpenESDHFoldersService"/>
        </property>
        
        <property name="personService">
            <ref bean="PersonService"/>
        </property>
        
        <property name="namespaceService">
            <ref bean="NamespaceService"/>
        </property>
        
        <property name="nodeInfoService">
            <ref bean="NodeInfoService"/>
        </property>
        
        <property name="behaviourFilter">
            <ref bean="policyBehaviourFilter"/>
        </property>
    </bean>
    
    <bean id="DocumentTypeService" class="dk.openesdh.repo.services.documents.DocumentTypeServiceImpl">
        <property name="nodeService">
            <ref bean="NodeService"/>
        </property>
        <property name="openESDHFoldersService">
            <ref bean="OpenESDHFoldersService"/>
        </property>
        <property name="multiLanguagePropertyService">
            <ref bean="MultiLanguagePropertyService"/>
        </property>
    </bean>
    
    <bean id="DocumentCategoryService" class="dk.openesdh.repo.services.documents.DocumentCategoryServiceImpl">
        <property name="nodeService">
            <ref bean="NodeService"/>
        </property>
        <property name="openESDHFoldersService">
            <ref bean="OpenESDHFoldersService"/>
        </property>
        <property name="multiLanguagePropertyService">
            <ref bean="MultiLanguagePropertyService"/>
        </property>
    </bean>

    <bean id="OELockService"
          class="dk.openesdh.repo.services.lock.OELockServiceImpl">
        <property name="nodeService">
            <ref bean="NodeService"/>
        </property>

        <property name="ownableService">
            <ref bean="OwnableService"/>
        </property>

        <property name="lockService">
            <ref bean="LockService"/>
        </property>

        <property name="permissionService">
            <ref bean="PermissionService"/>
        </property>

        <property name="transactionService">
            <ref bean="TransactionService"/>
        </property>
    </bean>

    <bean id="NodeInfoService" class="dk.openesdh.repo.services.NodeInfoServiceImpl">
        <property name="nodeService">
            <ref bean="NodeService"/>
        </property>
        <property name="dictionaryService">
            <ref bean="DictionaryService"/>
        </property>
        <property name="personService">
            <ref bean="PersonService"/>
        </property>
        <property name="namespaceService" ref="namespaceService"/>
    </bean>

    <bean id="DocumentService" class="dk.openesdh.repo.services.documents.DocumentServiceImpl" init-method="init">
        <property name="caseService">
            <ref bean="CaseService"/>
        </property>
        <property name="contentService">
            <ref bean="ContentService"/>
        </property>
        <property name="renditionService">
            <ref bean="RenditionService"/>
        </property>
        <property name="copyService">
            <ref bean="CopyService"/>
        </property>
        <property name="nodeService">
            <ref bean="NodeService"/>
        </property>
        <property name="dictionaryService">
            <ref bean="DictionaryService"/>
        </property>
        <property name="personService">
            <ref bean="PersonService"/>
        </property>
        <property name="searchService">
            <ref bean="SearchService"/>
        </property>
        <property name="namespaceService">
            <ref bean="namespaceService"/>
        </property>
        <property name="versionService">
            <ref bean="VersionService"/>
        </property>
        <property name="oeLockService">
            <ref bean="OELockService"/>
        </property>
        <property name="mimetypeService">
            <ref bean="mimetypeService"/>
        </property>
        <property name="documentTypeService">
            <ref bean="DocumentTypeService"/>
        </property>
        <property name="documentCategoryService">
            <ref bean="DocumentCategoryService"/>
        </property>
        <property name="transactionService">
            <ref bean="TransactionService"/>
        </property>
        <property name="acceptableFinalizedFileFormats">
            <value>${openesdh.document.acceptableFinalizedFileFormats}</value>
        </property>
        <property name="finalizedFileFormat">
            <value>${openesdh.document.finalizedFileFormat}</value>
        </property>
        <property name="behaviourFilter">
            <ref bean="policyBehaviourFilter"/>
        </property>
    </bean>

    <bean id="AuditSearchService" class="dk.openesdh.repo.services.audit.AuditSearchServiceImpl">
        <property name="auditService">
            <ref bean="AuditService"/>
        </property>
        <property name="authorityService">
            <ref bean="AuthorityService"/>
        </property>
        <property name="permissionService">
            <ref bean="PermissionService"/>
        </property>
        <property name="dictionaryService">
            <ref bean="DictionaryService"/>
        </property>
    </bean>

    <bean id="UserInvolvedSearchService" class="dk.openesdh.repo.services.xsearch.UserInvolvedSearchServiceImpl">
        <property name="searchService">
            <ref bean="SearchService"/>
        </property>
        <property name="repositoryHelper">
            <ref bean="repositoryHelper"/>
        </property>
        <property name="authorityService">
            <ref bean="authorityService"/>
        </property>
    </bean>

    <bean id="LastModifiedByMeSearchService"
          class="dk.openesdh.repo.services.xsearch.LastModifiedByMeSearchServiceImpl">
        <property name="searchService">
            <ref bean="SearchService"/>
        </property>
        <property name="repositoryHelper">
            <ref bean="repositoryHelper"/>
        </property>
        <property name="authorityService">
            <ref bean="authorityService"/>
        </property>
        <property name="auditService">
            <ref bean="auditService"/>
        </property>
        <property name="dictionaryService">
            <ref bean="dictionaryService"/>
        </property>
        <property name="nodeService">
            <ref bean="nodeService"/>
        </property>
    </bean>

    <bean id="ClassificationSearchService"
          class="dk.openesdh.repo.services.classification.ClassificationSearchServiceImpl">
        <property name="searchService">
            <ref bean="SearchService"/>
        </property>
        <property name="repositoryHelper">
            <ref bean="repositoryHelper"/>
        </property>
    </bean>

    <bean id="CaseDocumentsSearchService"
          class="dk.openesdh.repo.services.xsearch.CaseDocumentsSearchServiceImpl">
        <property name="caseService" ref="CaseService"/>
        <property name="documentService" ref="DocumentService"/>
        <property name="nodeService" ref="NodeService"/>
        <property name="fileFolderService" ref="FileFolderService"/>
        <property name="namespaceService" ref="NamespaceService"/>
    </bean>

    <bean id="ContactSearchService" class="dk.openesdh.repo.services.xsearch.ContactSearchServiceImpl">
        <property name="dictionaryService">
            <ref bean="dictionaryService"/>
        </property>
        <property name="namespaceService">
            <ref bean="namespaceService"/>
        </property>
        <property name="searchService">
            <ref bean="SearchService"/>
        </property>
        <property name="repositoryHelper">
            <ref bean="repositoryHelper"/>
        </property>
    </bean>

    <bean id="ContactDAO" class="dk.openesdh.repo.services.contacts.ContactDAOImpl">
        <property name="nodeService" ref="nodeService"/>
        <property name="namespacePrefixResolver" ref="namespaceService"/>
        <property name="repositoryHelper" ref="repositoryHelper"/>
    </bean>

    <bean id="ContactService" class="dk.openesdh.repo.services.contacts.ContactServiceImpl">
        <property name="nodeService" ref="nodeService"/>
        <property name="contactDAO" ref="ContactDAO"/>
        <property name="searchService" ref="searchService"/>
        <property name="contactSearchService" ref="ContactSearchService"/>
        <property name="transactionService" ref="TransactionService"/>
    </bean>

    <bean id="NoteService"
          class="dk.openesdh.repo.services.notes.NoteServiceImpl">
        <property name="nodeService" ref="NodeService"/>
        <property name="personService" ref="PersonService"/>
        <property name="contactService" ref="ContactService"/>
    </bean>

    <bean id="PartyService" class="dk.openesdh.repo.services.cases.PartyServiceImpl">
        <property name="authorityService" ref="authorityService"/>
        <property name="caseService" ref="CaseService"/>
        <property name="contactService" ref="ContactService"/>
        <property name="nodeService" ref="NodeService"/>
        <property name="dictionaryService" ref="DictionaryService"/>
        <property name="namespacePrefixResolver" ref="namespaceService"/>
    </bean>
    
    <bean id="OfficeTemplateService"
          class="dk.openesdh.repo.services.officetemplate.OfficeTemplateServiceImpl"
          init-method="init">
        <property name="nodeService" ref="NodeService" />
        <property name="fileFolderService" ref="FileFolderService" />
        <property name="contentService" ref="ContentService" />
        <property name="repositoryHelper" ref="repositoryHelper" />
        <property name="mimetypeService" ref="mimetypeService"/>
        <property name="templateMimeTypes">
            <list>
                <value>application/vnd.oasis.opendocument.text-template</value>
            </list>
        </property>
    </bean>
    
    <bean id="MultiLanguagePropertyService" class="dk.openesdh.repo.services.system.MultiLanguagePropertyServiceImpl">
        <property name="nodeService" ref="nodeService" />
    </bean>

</beans>
