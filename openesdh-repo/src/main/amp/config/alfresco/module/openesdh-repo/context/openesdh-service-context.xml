<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE beans PUBLIC '-//SPRING//DTD BEAN//EN' 'http://www.springframework.org/dtd/spring-beans.dtd'>
<beans>
    <bean id="CaseService"
          class="dk.openesdh.repo.services.cases.CaseServiceImpl" init-method="init">
        <property name="nodeService">
            <ref bean="NodeService"/>
        </property>

        <property name="searchService">
            <ref bean="SearchService"/>
        </property>

        <property name="contentService">
            <ref bean="ContentService"/>
        </property>

        <property name="authorityService">
            <ref bean="AuthorityService"/>
        </property>

        <property name="ownableService">
            <ref bean="OwnableService"/>
        </property>

        <property name="lockService">
            <ref bean="LockService"/>
        </property>

        <property name="permissionService">
            <ref bean="PermissionService"/>
        </property>

        <property name="repositoryHelper">
            <ref bean="repositoryHelper"/>
        </property>

        <property name="transactionService">
            <ref bean="TransactionService"/>
        </property>

        <property name="dictionaryService">
            <ref bean="DictionaryService"/>
        </property>
        
        <property name="permissionsModelDAO">
            <ref bean="permissionsModelDAO"/>
        </property>

        <property name="behaviourFilter">
            <ref bean="policyBehaviourFilter"/>
        </property>

        <property name="policyComponent">
            <ref bean="policyComponent"/>
        </property>
    </bean>

    <bean id="NodeInfoService" class="dk.openesdh.repo.services.NodeInfoServiceImpl">
        <property name="nodeService">
            <ref bean="NodeService"/>
        </property>
        <property name="dictionaryService">
            <ref bean="DictionaryService"/>
        </property>
        <property name="personService">
            <ref bean="PersonService"/>
        </property>
        <property name="namespaceService" ref="namespaceService"/>
    </bean>

    <bean id="DocumentService" class="dk.openesdh.repo.services.documents.DocumentServiceImpl">
        <property name="caseService">
            <ref bean="CaseService"/>
        </property>
        
        <property name="copyService">
            <ref bean="CopyService"/>
        </property>

        <property name="nodeService">
            <ref bean="NodeService"/>
        </property>
        <property name="dictionaryService">
            <ref bean="DictionaryService"/>
        </property>
        <property name="personService">
            <ref bean="PersonService"/>
        </property>

        <property name="transactionService">
            <ref bean="TransactionService"/>
        </property>

        <property name="namespaceService" ref="namespaceService"/>
        
        <property name="versionService" ref="VersionService"/>

        <property name="behaviourFilter">
            <ref bean="policyBehaviourFilter"/>
        </property>
    </bean>

    <bean id="XSearchService" class="dk.openesdh.repo.services.xsearch.XSearchServiceImpl">
        <property name="caseService">
            <ref bean="CaseService"/>
        </property>
        <property name="searchService">
            <ref bean="SearchService"/>
        </property>
        <property name="repositoryHelper">
            <ref bean="repositoryHelper"/>
        </property>
    </bean>

    <bean id="AuditSearchService" class="dk.openesdh.repo.services.audit.AuditSearchServiceImpl">
        <property name="auditService">
            <ref bean="AuditService"/>
        </property>
        <property name="authorityService">
            <ref bean="AuthorityService"/>
        </property>
        <property name="permissionService">
            <ref bean="PermissionService"/>
        </property>
    </bean>

    <bean id="UserInvolvedSearchService" class="dk.openesdh.repo.services.xsearch.UserInvolvedSearchServiceImpl">
        <property name="searchService">
            <ref bean="SearchService"/>
        </property>
        <property name="repositoryHelper">
            <ref bean="repositoryHelper"/>
        </property>
        <property name="authorityService">
            <ref bean="authorityService"/>
        </property>
    </bean>

    <bean id="LastModifiedByMeSearchService" class="dk.openesdh.repo.services.xsearch.LastModifiedByMeSearchServiceImpl">
        <property name="searchService">
            <ref bean="SearchService"/>
        </property>
        <property name="repositoryHelper">
            <ref bean="repositoryHelper"/>
        </property>
        <property name="authorityService">
            <ref bean="authorityService"/>
        </property>
        <property name="auditService">
            <ref bean="auditService"/>
        </property>
        <property name="dictionaryService">
            <ref bean="dictionaryService"/>
        </property>
        <property name="nodeService">
            <ref bean="nodeService"/>
        </property>
    </bean>

    <bean id="CaseDocumentsSearchService"
          class="dk.openesdh.repo.services.xsearch.CaseDocumentsSearchServiceImpl"
          parent="XSearchService">
        <property name="caseService" ref="CaseService"/>
        <property name="documentService" ref="DocumentService"/>
        <property name="nodeService" ref="NodeService"/>
        <property name="fileFolderService" ref="FileFolderService"/>
        <property name="namespaceService" ref="NamespaceService"/>
    </bean>

    <bean id="ContactSearchService" class="dk.openesdh.repo.services.xsearch.ContactSearchServiceImpl"
          parent="XSearchService">
        <property name="dictionaryService">
            <ref bean="dictionaryService"/>
        </property>
        <property name="namespaceService">
            <ref bean="namespaceService"/>
        </property>
        <property name="searchService">
            <ref bean="SearchService"/>
        </property>
        <property name="repositoryHelper">
            <ref bean="repositoryHelper"/>
        </property>
    </bean>

    <bean id="ContactDAO" class="dk.openesdh.repo.services.contacts.ContactDAOImpl">
        <property name="nodeService" ref="nodeService"/>
        <property name="namespacePrefixResolver" ref="namespaceService" />
        <property name="repositoryHelper" ref="repositoryHelper"/>
    </bean>

    <bean id="ContactService" class="dk.openesdh.repo.services.contacts.ContactServiceImpl">
        <property name="nodeService" ref="nodeService" />
        <property name="contactDAO" ref="ContactDAO" />
        <property name="searchService" ref="searchService"/>
        <property name="contactSearchService" ref="ContactSearchService"/>
    </bean>

    <bean id="NoteService"
          class="dk.openesdh.repo.services.notes.NoteServiceImpl">
        <property name="nodeService" ref="NodeService" />
        <property name="personService" ref="PersonService" />
        <property name="contactService" ref="ContactService" />
    </bean>

    <bean id="PartyService" class="dk.openesdh.repo.services.cases.PartyServiceImpl">
        <property name="authorityService" ref="authorityService"/>
        <property name="caseService" ref="CaseService"/>
        <property name="contactService" ref="ContactService"/>
        <property name="nodeService" ref="NodeService"/>
        <property name="dictionaryService" ref="DictionaryService" />
        <property name="namespacePrefixResolver" ref="namespaceService"/>
    </bean>

</beans>
