<?xml version="1.0" encoding="UTF-8"?>
<model name="oe:openesdhModel"
       xmlns="http://www.alfresco.org/model/dictionary/1.0">
    <description>OpenESDH Model</description>
    <author>Seth Yastrov, Flemming Heide Pedersen, Ole Hejlskov, Torben Lauritzen</author>
    <version>1.0</version>
    <imports>
        <import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
        <import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
        <import uri="http://www.alfresco.org/model/system/1.0" prefix="sys"/>
        <import uri="http://openesdh.dk/model/contact/1.0/" prefix="contact" />
    </imports>
    <namespaces>
        <namespace uri="http://openesdh.dk/model/openesdh/1.0/" prefix="oe"/>
    </namespaces>
    <types>
        <type name="oe:base">
            <parent>cm:folder</parent>
            <properties>
                <property name="oe:id">
                    <type>d:text</type>
                </property>
                <property name="oe:status">
                    <type>d:text</type>
                </property>
            </properties>
            <mandatory-aspects>
                <aspect>oe:titled</aspect>
            </mandatory-aspects>
        </type>
    </types>

    <aspects>
        <aspect name="oe:partied">
            <associations>
                <association name="oe:parties">
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>contact:base</class>
                        <mandatory>true</mandatory>
                        <many>true</many>
                    </target>
                </association>
            </associations>
        </aspect>
        <aspect name="oe:titled">
            <parent>cm:titled</parent>
            <overrides>
                <property name="cm:title">
                    <mandatory>true</mandatory>
                </property>
            </overrides>
        </aspect>
        <aspect name="oe:journalized">
            <parent>cm:classifiable</parent>
            <properties>
                <property name="oe:journalizedBy">
                    <type>d:text</type>
                    <mandatory>true</mandatory>
                </property>
                <property name="oe:journalizedDate">
                    <type>d:datetime</type>
                    <mandatory>true</mandatory>
                </property>
                <property name="oe:journalKey">
                    <type>d:category</type>
                    <mandatory>true</mandatory>
                    <multiple>false</multiple>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>true</stored>
                        <tokenised>false</tokenised>
                    </index>
                </property>
            </properties>
        </aspect>
        <aspect name="oe:caseId">
            <properties>
                <property name="oe:caseId">
                    <type>d:text</type>
                    <mandatory>true</mandatory>
                </property>
            </properties>
        </aspect>
    </aspects>

</model>
