<?xml version="1.0" encoding="UTF-8"?>
<model name="case:caseModel"
       xmlns="http://www.alfresco.org/model/dictionary/1.0">
    <description>openESDH Case Model</description>
    <author>Seth Yastrov, Flemming Heide Pedersen, Ole Hejlskov, Torben Lauritzen</author>
    <version>1.0</version>
    <imports>
        <import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d" />
        <import uri="http://www.alfresco.org/model/content/1.0" prefix="cm" />
        <import uri="http://www.alfresco.org/model/system/1.0" prefix="sys" />
        <import uri="http://openesdh.dk/model/openesdh/1.0/" prefix="oe" />
    </imports>
    <namespaces>
        <namespace uri="http://openesdh.dk/model/case/1.0/" prefix="case" />
    </namespaces>
    <constraints>
        <constraint name="case:allowedPartyRoles" type="LIST">
            <parameter name="allowedValues">
                <list>
                    <!-- TODO: localize -->
                    <value>Afsender</value>
                    <value>Modtager</value>
                </list>
            </parameter>
        </constraint>
        <constraint name="case:simpleStatusConstraint" type="LIST">
            <parameter name="allowedValues">
                <list>
                    <!-- TODO: localize (check localisation in /src/main/amp/config/alfresco/module/openesdh-repo/messages/case-model.properties) -->
                    <value>planned</value>
                    <value>in-progress</value>
                    <value>existing</value>
                    <value>pending</value>
                    <value>archived</value>
                    <value>cancelled</value>
                    <value>closed</value>
                </list>
            </parameter>
        </constraint>
    </constraints>
    <types>
        <type name="case:base">
            <parent>oe:base</parent>
            <archive>true</archive>
            <properties>
                <property name="case:startDate">
                    <type>d:date</type>
                    <mandatory>false</mandatory>
                </property>

                <property name="case:endDate">
                    <type>d:date</type>
                    <mandatory>false</mandatory>
                </property>
            </properties>

            <associations>
                <association name="case:owners">
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>cm:authority</class>
                        <mandatory>true</mandatory>
                        <many>true</many>
                    </target>
                </association>
            </associations>


        </type>

        <type name="case:simple">
            <parent>case:base</parent>

            <overrides>
                <property name="oe:status">
                    <constraints>
                        <constraint ref="case:simpleStatusConstraint"/>
                    </constraints>
                </property>
            </overrides>
        </type>
    </types>
</model>
