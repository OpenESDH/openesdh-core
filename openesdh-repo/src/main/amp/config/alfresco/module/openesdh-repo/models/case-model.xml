<?xml version="1.0" encoding="UTF-8"?>
<model name="case:caseModel"
       xmlns="http://www.alfresco.org/model/dictionary/1.0">
    <description>ESDH Case Model</description>
    <author>Ole Hejlskov</author>
    <version>1.0</version>
    <imports>
        <import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d" />
        <import uri="http://www.alfresco.org/model/content/1.0" prefix="cm" />
        <import uri="http://www.alfresco.org/model/system/1.0" prefix="sys" />
        <import uri="http://openesdh.dk/model/openesdh/1.0/" prefix="oe" />
    </imports>
    <namespaces>
        <namespace uri="http://openesdh.dk/model/case/1.0/" prefix="case" />
    </namespaces>
    <constraints>
        <constraint name="case:simpleStatusConstraint" type="LIST">
            <parameter name="allowedValues">
                <list>
                    <!-- TODO: localize -->
                    <value>Planlagt</value>
                    <value>Igangværende</value>
                    <value>Gældende</value>
                    <value>Afventer</value>
                    <value>Udgået</value>
                    <value>Annulleret</value>
                    <value>Lukket</value>
                </list>
            </parameter>
        </constraint>
    </constraints>
    <types>
        <type name="case:base">
            <parent>oe:base</parent>
            <archive>true</archive>
            <properties>
                <property name="case:startDate">
                    <type>d:date</type>
                    <mandatory>false</mandatory>
                </property>

                <property name="case:endDate">
                    <type>d:date</type>
                    <mandatory>false</mandatory>
                </property>
            </properties>

            <associations>
                <association name="case:owners">
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>cm:authority</class>
                        <mandatory>true</mandatory>
                        <many>true</many>
                    </target>
                </association>
            </associations>

            <mandatory-aspects>
                <aspect>sys:undeletable</aspect>
                <aspect>oe:journalizable</aspect>
            </mandatory-aspects>
        </type>

        <type name="case:simple">
            <parent>case:base</parent>

            <overrides>
                <property name="oe:status">
                    <constraints>
                        <constraint ref="case:simpleStatusConstraint"/>
                    </constraints>
                </property>
            </overrides>
        </type>
    </types>

    <aspects>
        <aspect name="case:journalized">
            <properties>
                <property name="case:journalizedBy">
                    <type>d:text</type>
                    <mandatory>true</mandatory>
                </property>
                <property name="case:journalizedDate">
                    <type>d:datetime</type>
                    <mandatory>true</mandatory>
                </property>
            </properties>
        </aspect>


        <aspect name="case:counter">
            <title>Case Counter</title>
            <properties>
                <property name="case:uniqueNumber">
                    <type>d:int</type>
                </property>
            </properties>
        </aspect>

    </aspects>

</model>
