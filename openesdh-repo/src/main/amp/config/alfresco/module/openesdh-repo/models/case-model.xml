<?xml version="1.0" encoding="UTF-8"?>
<model name="base:caseModel" xmlns="http://www.alfresco.org/model/dictionary/1.0">
    <description>openESDH Case Model</description>
    <author>Seth Yastrov, Flemming Heide Pedersen, Ole Hejlskov, Torben Lauritzen, Lanre Abiwon</author>
    <version>1.0</version>
    <imports>
        <import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d" />
        <import uri="http://www.alfresco.org/model/content/1.0" prefix="cm" />
        <import uri="http://www.alfresco.org/model/system/1.0" prefix="sys" />
        <import uri="http://openesdh.dk/model/openesdh/1.0/" prefix="oe" />
    </imports>
    <namespaces>
        <namespace uri="http://openesdh.dk/model/case/base/1.0/" prefix="base" />
    </namespaces>
    <constraints>
        <constraint name="base:allowedPartyRoles" type="LIST">
            <parameter name="allowedValues">
                <list>
                    <!-- TODO: localize -->
                    <value>Afsender</value>
                    <value>Modtager</value>
                </list>
            </parameter>
        </constraint>
    </constraints>
    <types>
        <type name="base:case">
            <parent>oe:base</parent>
            <archive>true</archive>
            <properties>
                <property name="base:startDate">
                    <type>d:date</type>
                    <mandatory>false</mandatory>
                </property>

                <property name="base:endDate">
                    <type>d:date</type>
                    <mandatory>false</mandatory>
                </property>
            </properties>

            <associations>
                <association name="base:owners">
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>cm:authority</class>
                        <mandatory>true</mandatory>
                        <many>true</many>
                    </target>
                </association>
            </associations>

            <mandatory-aspects>
                <aspect>oe:journalizable</aspect>
            </mandatory-aspects>
        </type>
    </types>
</model>
